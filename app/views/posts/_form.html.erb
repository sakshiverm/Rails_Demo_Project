
<%= form_with model: [ @user, @user.posts.build ] do |form| %>
  <div>
    <%= form.label :images,style: "display: block" %><br>
    <%= form.file_field :images %>
  </div>
  <div>
    <%= form.label :body,style: "display: block" %><br>
    <%= form.text_area :body %>
  </div>
  <div>
    <br>
    <%= form.submit %>
  </div>
<% end %>
